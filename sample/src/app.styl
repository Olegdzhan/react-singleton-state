html, body
  font-family: "Roboto", "Arial", sans-serif
  @media all and (max-width: 360px)
    font-size: 10px
  @media all and (min-width: 361px)
    font-size: 11px
  @media all and (min-width: 641px)
    font-size: 12px
  @media all and (min-width: 1025px)
    font-size: 13px
  @media all and (min-width: 1301px)
    font-size: 14px
  @media all and (min-width: 1601px)
    font-size: 15px

h1
  color: darkgray
  text-align: center
  font-weight: 300
  font-size: 3rem
  margin: 0 0 4rem 0
  padding: 0

h2
  color: black
  text-align: center
  font-weight 300rem
  font-size: 2.2rem
  margin: 0 0 1rem 0
  padding 0

h3
  color: #333
  font-weight: 500
  font-size: 1.5rem
  margin: 2.5rem 0 0 0

code
  font-size: 1rem
  color: dodgerblue